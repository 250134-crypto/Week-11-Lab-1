#include <iostream>
using namespace std;

const int N = 4;
void multiplyMatrix(const double a[][N],
                    const double b[][N],
                    double c[][N]) {
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < N; ++j) {
            c[i][j] = 0;
            for (int k = 0; k < N; ++k) {
                c[i][j] += a[i][k] * b[k][j];
            }
        }
    }
}

int main() {
    double M1[N][N], M2[N][N], C[N][N];

    cout << "Enter matrix M1 (4x4):\n";
    for (int i = 0; i < N; ++i)
        for (int j = 0; j < N; ++j)
            cin >> M1[i][j];

    cout << "Enter matrix M2 (4x4):\n";
    for (int i = 0; i < N; ++i)
        for (int j = 0; j < N; ++j)
            cin >> M2[i][j];

    multiplyMatrix(M1, M2, C);

    cout << "The product matrix is:\n";
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < N; ++j)
            cout << C[i][j] << " ";
        cout << "\n";
    }

    return 0;
}
